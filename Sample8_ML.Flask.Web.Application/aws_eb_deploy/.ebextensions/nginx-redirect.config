files:
  "/etc/nginx/conf.d/nginx-redirect.config":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name andrewodrain.com www.andrewodrain.com;
          return 301 https://$host$request_uri;
      }

server {
    listen 443 ssl;
    server_name andrewodrain.com www.andrewodrain.com;

    # SSL configuration
    ssl_certificate /path/to/your/fullchain.pem;
    ssl_certificate_key /path/to/your/privkey.pem;

    # The rest of your HTTPS server configuration goes here
}