{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "psql_containerd",
      "image": "andrewodrain/web-applications:psqld-v0.0.2",
      "essential": true,
      "memory": 512,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "portfolio-app-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "psql"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "psql-data",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ]
    },
    {
      "name": "app_containerd",
      "image": "andrewodrain/web-applications:appd-v0.0.2",
      "essential": true,
      "memory": 512,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "portfolio-app-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "app"
        }
      }
    },
    {
      "name": "redis_containerd",
      "image": "andrewodrain/web-applications:redisd-v0.0.2",
      "essential": true,
      "memory": 256,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "portfolio-app-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "redis"
        }
      },
      "mountPoints": [
        {
          "sourceVolume": "redis-data",
          "containerPath": "/var/lib/redis",
          "readOnly": false
        },
        {
          "sourceVolume": "redis-config",
          "containerPath": "/usr/local/etc/redis",
          "readOnly": false
        }
      ]
    },
    {
      "name": "nginx_containerd",
      "image": "andrewodrain/web-applications:nginxd-v0.0.2",
      "essential": true,
      "memory": 512,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "portfolio-app-logs",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "nginx"
        }
      },
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "psql-data",
      "host": {
        "sourcePath": "/var/lib/postgresql/data"
      }
    },
    {
      "name": "redis-data",
      "host": {
        "sourcePath": "/var/app/redis-data"
      }
    },
    {
      "name": "redis-config",
      "host": {
        "sourcePath": "/var/app/redis-config"
      }
    }
  ]
}


